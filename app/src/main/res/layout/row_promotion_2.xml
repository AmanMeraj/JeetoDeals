<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/orange_card_top"
        android:layout_width="match_parent"
        android:id="@+id/orange_rel"
        android:layout_height="50dp">
        <TextView
            android:textSize="15sp"
           android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_bold"
            android:text="Closing at 02:30:45"
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:elevation="5dp"
        android:id="@+id/promotion_card"
        android:background="@drawable/white_card_bg"
        android:layout_below="@+id/orange_rel"
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/image_card"
                app:cardCornerRadius="30dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/promotion_image"
                    android:id="@+id/image"
                    android:layout_width="260dp"
                    android:layout_height="245dp"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:elevation="10dp"
                android:layout_marginTop="-2dp"
                android:id="@+id/rel_total_ticket"
                android:layout_marginEnd="-2dp"
                android:background="@drawable/green_card_bg"
                android:paddingHorizontal="30dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                  android:layout_centerHorizontal="true"
                    android:paddingTop="5dp"
                    android:text="1250"
                    android:layout_below="@+id/total_ticket_tv"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_bold"
                    android:id="@+id/text_item_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                   android:layout_marginTop="10dp"
                    android:text="Total Tickets"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter"
                    android:id="@+id/total_ticket_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/win_tv"
                android:layout_marginHorizontal="20dp"
                android:layout_below="@+id/image_card"
                android:layout_width="wrap_content"
                android:text="WIN"
                android:textColor="@color/orange"
                android:textSize="20sp"
                android:fontFamily="@font/inter_extrabold"
                android:layout_height="wrap_content"/>
            <TextView
                android:fontFamily="@font/inter_bold"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/heading"
                android:textSize="15sp"
                android:layout_below="@+id/win_tv"
                android:textColor="@color/black"
                android:text="I Phone 16 Pro Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/chance_tv"
                android:paddingVertical="5dp"
          android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/heading"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/inter"
                android:text="Get a chance to Win"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/green"
                android:fontFamily="@font/inter_bold"
                android:textSize="12sp"
                android:paddingVertical="5dp"
                android:layout_below="@+id/heading"
                android:layout_toEndOf="@+id/chance_tv"
                android:id="@+id/heading2"
                android:text="I Phone 16 Pro Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:paddingVertical="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"
                android:layout_below="@+id/heading2"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/desc"
                android:textSize="12sp"
                android:text="@string/draw_date_31_december_2024_or_earlier_based_on_the_time_passed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="3"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/desc"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/buy"
                        android:text="BUY"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/inter_bold"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginStart="3dp"
                        android:layout_toEndOf="@+id/buy"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/vouchers_tv"
                        android:layout_width="wrap_content"
                        android:text="60 Vouchers"
                        android:textColor="@color/orange"
                        android:textSize="13sp"
                        android:fontFamily="@font/inter_extrabold"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>


                <ImageView
                    android:id="@+id/info_btn"
                    android:src="@drawable/info"
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="35dp"/>
                <RelativeLayout
                   android:layout_marginStart="5dp"
                    android:background="@drawable/green_btn"
                    android:gravity="center"
                   android:layout_gravity="center"
                    android:id="@+id/add_cart_rel"
                    android:layout_weight="1.20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/add_cart_btn"
                        android:gravity="center"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_add"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:paddingVertical="7dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="30dp"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_bold"
                            android:text="Add to cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>

                </RelativeLayout>
                    <ImageView
                        android:layout_marginEnd="-10dp"
                        android:layout_alignEnd="@+id/add_cart_btn"
                        android:id="@+id/bag"
                        android:padding="7dp"
                        android:background="@drawable/orange_oval"
                        android:src="@drawable/bag"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />


                </RelativeLayout>


            </LinearLayout>



        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>